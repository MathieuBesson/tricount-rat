// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  firstName   String        @db.VarChar(100)
  lastName    String        @db.VarChar(100)
  email       String        @unique @db.VarChar(300)
  Expenditure Expenditure[] @relation("user.expanditures")
}

model Expenditure {
  id                    Int                 @id @default(autoincrement())
  date                  DateTime            @db.Timestamp()
  amount                Float               @db.DoublePrecision()
  userId                Int
  expenditureCategoryId Int
  user                  User                @relation("user.expanditures", fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  expenditureCategory   ExpenditureCategory @relation("expenditure_category.expanditures", fields: [expenditureCategoryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model ExpenditureCategory {
  id          Int           @id @default(autoincrement())
  name        String        @db.VarChar(100)
  Expenditure Expenditure[] @relation("expenditure_category.expanditures")
}
